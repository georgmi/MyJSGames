                @Html.EditorFor(model => model.GameTitle)
                @Html.ValidationMessageFor(model => model.GameTitle)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GameAction, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GameAction)
                @Html.ValidationMessageFor(model => model.GameAction)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GameImage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GameImage)
                @Html.ValidationMessageFor(model => model.GameImage)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
