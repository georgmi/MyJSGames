        <h4>Game</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GameId)

        <div class="form-group">
            @Html.LabelFor(model => model.GameTitle, new { @class = "control-label col-md-2" })
